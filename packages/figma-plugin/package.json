{
  "name": "@yafai/figma-plugin",
  "version": "0.1.0",
  "description": "Figma plugin for Yafai AI pitch deck system",
  "type": "module",
  "scripts": {
    "build": "npm run build:css && npm run build:code && npm run build:ui && npm run build:html",
    "build:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --format=iife --target=es6",
    "build:ui": "esbuild src/ui/main.tsx --bundle --outfile=dist/ui.js --format=iife --target=es6 --loader:.tsx=tsx --loader:.ts=ts --define:process.env.NODE_ENV=\\\"production\\\"",
    "build:css": "tailwindcss -i src/ui/styles.css -o dist/ui.css --minify",
    "build:html": "node scripts/build-html.js",
    "dev": "npm run build:css && concurrently \"npm run dev:code\" \"npm run dev:ui\" \"npm run dev:css\"",
    "dev:code": "esbuild src/code.ts --bundle --outfile=dist/code.js --format=iife --target=es6 --watch",
    "dev:ui": "esbuild src/ui/main.tsx --bundle --outfile=dist/ui.js --format=iife --target=es6 --loader:.tsx=tsx --loader:.ts=ts --watch",
    "dev:css": "tailwindcss -i src/ui/styles.css -o dist/ui.css --watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@yafai/primitives": "*",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.90.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.0",
    "esbuild": "^0.20.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3"
  }
}
